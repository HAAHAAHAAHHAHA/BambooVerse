<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BambooVerse" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="ScreenBackground"><item name="android:background">@drawable/bg1</item></style>
    <style name="AnotherScreenBackground"><item name="android:background">@drawable/anobg</item></style>
    <style name="ButtonColor1"><item name="android:background">@drawable/buttoncolorano</item></style>
    <style name="ButtonColor2"><item name="android:background">@drawable/buttoncolor</item></style>
    <style name="ButtonColor3"><item name="android:background">@drawable/anocolorbutton</item></style>


    <style name="Theme.BambooVerse" parent="Base.Theme.BambooVerse" />
</resources>