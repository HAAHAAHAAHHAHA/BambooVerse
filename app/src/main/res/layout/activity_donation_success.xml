<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".DonationSuccess">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="350dp"
        android:layout_height="396dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="354dp"
        android:layout_height="339dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="376dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bambooverse_logo" />

    <TextView
        android:id="@+id/txtTY"
        android:layout_width="305dp"
        android:layout_height="128dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="319dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="284dp"
        android:text="YOUR DONATION IS SUCCESSFUL .THANK YOU FOR YOUR DONATION!!"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDa"
        android:layout_width="190dp"
        android:layout_height="53dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="462dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="216dp"
        android:background="@drawable/rectangle_btn3"
        android:text="DONATE AGAIN"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="193dp"
        android:layout_height="52dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="529dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/rectangle_btn3"
        android:text="BACK"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>